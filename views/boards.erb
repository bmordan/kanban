<section class="pa2">
    <h1>Boards</h1>
    <div class="flex flex-wrap">
        <% boards.each do |board| %>
            <a href="/board/<%= board.id %>" class="ba b--gold dib h5 w5 bg-yellow orange b flex flex-column justify-end pa2 mr2 mb2">
                <div><%= board.title %></div>
            </a>
        <% end %>
    </div>
</section>
<section class="pa2 mb4">
    <form action="/board" method="POST">
        <input class="pa2 db" name="title" placeholder="Title for your board" required />
        <button class="mt2 db bg-yellow ba b--gold orange pa2" type="submit">Create Board +</button>
    </form>
</section>